{
  "version": "1.0.4",
  "name": "remix-ide",
  "description": "Remix - Ethereum IDE",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "release": "yarn run dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum/remix-desktop.git"
  },
  "author": {
    "name": "Remix Team",
    "email": "remix@ethereum.org"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ethereum/remix-desktop/issues"
  },
  "homepage": "https://github.com/ethereum/remix-desktop#readme",
  "devDependencies": {
    "electron": "6.0.9",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "productName": "Remix IDE",
    "appId": "org.ethereum.remix-ide",
    "asar": false,
    "files": [
      "main.js",
      "selectFolder.js",
      "setFolder.js",
      "applicationMenu.js",
      "build/icon.png",
      "*.asar",
      "*.zip"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip",
        "dmg"
      ],
      "darkModeSupport": true
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "shortcutName": "Remix IDE"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "snap",
        "AppImage"
      ],
      "category": "WebBrowser"
    },
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@philipplgh/electron-app-manager": "^0.55.0",
    "remixd": "^0.1.8-alpha.14"
  }
}
